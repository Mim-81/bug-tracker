pipeline {
  agent any

  stages {
    stage('Execute Unit Tests') {
      parallel {

        stage('Unit Tests - Backend') {
          agent {
            docker {
              image 'snakee/golang-junit:1.21'
              args '-u 0:0'                  // run as root to avoid perms issues
              reuseNode true
            }
          }
          steps {
            dir('bugtracker-backend') {
              sh '''
                go test -v ./... 2>&1 | go-junit-report > test-results.xml

                # Generate coverage report
                go test -coverprofile=coverage.out -covermode=atomic ./...
                go tool cover -html=coverage.out -o coverage.html

                mkdir -p reports
                mv coverage.html reports/
              '''
            }
          }
          post {
            always {
              junit 'bugtracker-backend/test-results.xml'
              publishHTML(target: [
                reportDir: 'bugtracker-backend/reports',
                reportFiles: 'coverage.html',
                reportName: 'Backend Coverage Report',
                keepAll: true,
                alwaysLinkToLastBuild: true,
                allowMissing: true
              ])
            }
          }
        }

        stage('Unit Tests - Frontend') {
          agent {
            docker {
              image 'node:20-alpine'
              args '-u 0:0'
              reuseNode true
            }
          }
          steps {
            dir('bugtracker-frontend') {
              sh '''
                npm ci
                npm test
                mkdir -p reports
                mv coverage reports/ || true
              '''
            }
          }
          post {
            always {
              junit 'bugtracker-frontend/test-results.xml'
              publishHTML(target: [
                reportDir: 'bugtracker-frontend/reports/coverage',
                reportFiles: 'index.html',
                reportName: 'Frontend Coverage Report',
                keepAll: true,
                alwaysLinkToLastBuild: true,
                allowMissing: true
              ])
            }
          }
        }

      } // end parallel
    }

    stage('Launch Application') {
      // Use docker CLI image and bind the host socket
      agent {
        docker {
          image 'docker:27-cli'
          args '-v /var/run/docker.sock:/var/run/docker.sock -u 0'
          reuseNode true
        }
      }
      steps {
        // The workspace CWD is the repo root (even though Jenkinsfile is under jenkins/)
        // Use the ROOT docker-compose.yml for your app:
        sh 'docker compose -f docker-compose.yml up --build -d'
      }
    }

    stage('API Tests') {
      agent {
        docker {
          image 'mcr.microsoft.com/playwright:v1.50.0-jammy'
          args '-u 0:0 --network host'  // Use host networking to access the app
          reuseNode true
        }
      }
      steps {
        dir('tests-api') {
          // sh '''
          //   npm ci
          //   npx playwright install --with-deps
          //   npx playwright test api --reporter=junit --output=./test-results
          // '''
          sh 'npx wait-port http://localhost:8080/api/health -t 30000'
          sh 'npm ci'
          sh 'npx playwright test'
        }
      }
      post {
        always {
          junit 'tests-api/test-results/results.xml'
          publishHTML(target: [
            reportDir: 'tests-api/playwright-report',
            reportFiles: 'index.html',
            reportName: 'Playwright API Test Report',
            keepAll: true,
            alwaysLinkToLastBuild: true,
            allowMissing: true
          ])
        }
      }
    }

    stage('E2E Tests') {
      agent {
        docker {
          image 'mcr.microsoft.com/playwright:v1.50.0-jammy'
          args '-u 0:0 --network host'  // Use host networking to access the app
          reuseNode true
        }
      }
      steps {
        dir('tests-e2e') {
          // sh 'npx wait-port http://localhost:8080 -t 30000'
          sh 'npm ci'
          sh 'npx playwright test'
        }
      }
      post {
        always {
          junit 'tests-e2e/test-results/results.xml'
          publishHTML(target: [
            reportDir: 'tests-e2e/playwright-report',
            reportFiles: 'index.html',
            reportName: 'Playwright E2E Test Report',
            keepAll: true,
            alwaysLinkToLastBuild: true,
            allowMissing: true
          ])
        }
      }
    }

    // =========================
    // FIXED Performance stage
    // =========================
    stage('Performance Tests') {
      environment {
        // default compose network name: "<folder>_default"
        COMPOSE_NET = 'bug-tracker_default'           // <-- change if your folder name differs
        BASE_URL    = 'http://bugtracker-backend:8080' // <-- backend service name + port from docker-compose.yml
      }
      agent {
        docker {
          image 'grafana/k6:latest'
          // Put k6 container on the same network as the app so it can reach "bugtracker-backend"
          // NOTE: "--network host" does not work on Docker Desktop (Mac/Windows); use the compose network instead.
          args "--network ${COMPOSE_NET} -u 0:0"
          reuseNode true
        }
      }
      steps {
        dir('tests-perf') {
          // If your k6 script still hardcodes localhost, update it to:
          // const BASE_URL = __ENV.BASE_URL || 'http://localhost:8080'
          //
          // Wait for the backend to be healthy inside this network.
          // BusyBox wget is available in the k6 image.
          sh '''
            echo "Waiting for $BASE_URL/api/health ..."
            for i in $(seq 1 30); do
              wget -qO- "$BASE_URL/api/health" > /dev/null && { echo "Backend is up"; break; }
              sleep 2
            done

            # Run k6 and pass BASE_URL so the script resolves the correct host
            k6 run -e BASE_URL="$BASE_URL" script.js
          '''
          // sh 'k6 run script.js'  // old direct call (will fail if script uses localhost)
        }
      }
      // post {
      //   always {
      //     // If you produce an HTML report (e.g., perf-results.html), publish it:
      //     publishHTML(target: [
      //       reportDir: 'tests-perf',
      //       reportFiles: 'perf-results.html',
      //       reportName: 'k6 Performance Report',
      //       keepAll: true,
      //       alwaysLinkToLastBuild: true,
      //       allowMissing: true
      //     ])
      //   }
      // }
    }
  }

  post {
    always {
      cleanWs()
    }
  }
}
